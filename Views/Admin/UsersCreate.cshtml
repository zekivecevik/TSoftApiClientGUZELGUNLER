@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<div class="page-container">
    <div class="section-header">
        <h1 class="section-title">➕ Yeni Kullanıcı Ekle</h1>
        <a href="/Admin/Users" class="btn btn-secondary">← Geri Dön</a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" style="margin-bottom: 24px;">
            ❌ @ViewBag.Error
        </div>
    }

    <div class="cards-container" style="max-width: 600px; margin: 0 auto;">
        <form method="post" asp-action="Create">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label" for="username">
                    👤 Kullanıcı Adı *
                </label>
                <input type="text"
                       class="form-control"
                       id="username"
                       name="username"
                       placeholder="johndoe"
                       required
                       pattern="[a-zA-Z0-9_-]+"
                       title="Sadece harf, rakam, tire ve alt çizgi kullanılabilir" />
                <small style="color: var(--text-secondary); font-size: 12px; display: block; margin-top: 4px;">
                    Sadece harf, rakam, tire (-) ve alt çizgi (_) kullanın
                </small>
            </div>

            <div class="form-group">
                <label class="form-label" for="fullName">
                    ✏️ Ad Soyad *
                </label>
                <input type="text"
                       class="form-control"
                       id="fullName"
                       name="fullName"
                       placeholder="John Doe"
                       required />
            </div>

            <div class="form-group">
                <label class="form-label" for="email">
                    📧 E-posta *
                </label>
                <input type="email"
                       class="form-control"
                       id="email"
                       name="email"
                       placeholder="john.doe@example.com"
                       required />
            </div>

            <div class="form-group">
                <label class="form-label" for="password">
                    🔒 Şifre *
                </label>
                <input type="password"
                       class="form-control"
                       id="password"
                       name="password"
                       placeholder="En az 6 karakter"
                       required
                       minlength="6" />
                <small style="color: var(--text-secondary); font-size: 12px; display: block; margin-top: 4px;">
                    Minimum 6 karakter olmalıdır
                </small>
            </div>

            <div class="form-group">
                <label class="form-label" for="role">
                    🎭 Rol *
                </label>
                <select class="form-select" id="role" name="role" required>
                    <option value="">Rol Seçin</option>
                    <option value="Admin">👑 Admin - Tam Yetki</option>
                    <option value="Manager" selected>👨‍💼 Manager - Yönetici</option>
                    <option value="Viewer">👁️ Viewer - Sadece Görüntüleme</option>
                </select>
            </div>

            <!-- Rol Açıklamaları -->
            <div class="alert" style="background: rgba(124, 58, 237, 0.1); border-color: var(--primary); color: var(--text-secondary); margin-bottom: 24px;">
                <strong style="color: var(--primary);">📋 Rol Açıklamaları:</strong><br><br>
                <strong style="color: var(--danger);">👑 Admin:</strong> Tüm yetkiler, kullanıcı yönetimi dahil<br>
                <strong style="color: var(--warning);">👨‍💼 Manager:</strong> Ürün ve sipariş yönetimi, kullanıcı yönetimi yok<br>
                <strong style="color: var(--info);">👁️ Viewer:</strong> Sadece görüntüleme, düzenleme yok
            </div>

            <div style="display: flex; gap: 12px; justify-content: flex-end;">
                <a href="/Admin/Users" class="btn btn-secondary">
                    ❌ İptal
                </a>
                <button type="submit" class="btn btn-success">
                    ✅ Kullanıcıyı Oluştur
                </button>
            </div>
        </form>
    </div>

    <!-- Güvenlik Uyarısı -->
    <div class="cards-container" style="max-width: 600px; margin: 24px auto 0;">
        <h3 style="font-size: 16px; font-weight: 700; margin-bottom: 16px; color: var(--warning);">
            ⚠️ Güvenlik Uyarıları
        </h3>
        <div style="font-size: 13px; color: var(--text-secondary); line-height: 1.8;">
            <p>• Kullanıcı adı değiştirilemez, dikkatlice seçin</p>
            <p>• Güçlü şifreler kullanın (özel karakter, büyük/küçük harf, rakam)</p>
            <p>• Admin yetkisini sadece güvendiğiniz kişilere verin</p>
            <p>• Her kullanıcı için unique bir API key otomatik oluşturulacak</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Rol seçimine göre uyarı rengi değiştir
        document.getElementById('role').addEventListener('change', function() {
            const alert = document.querySelector('.alert');
            const role = this.value;

            if (role === 'Admin') {
                alert.style.borderColor = 'var(--danger)';
                alert.style.background = 'rgba(239, 68, 68, 0.1)';
            } else if (role === 'Manager') {
                alert.style.borderColor = 'var(--warning)';
                alert.style.background = 'rgba(245, 158, 11, 0.1)';
            } else {
                alert.style.borderColor = 'var(--info)';
                alert.style.background = 'rgba(59, 130, 246, 0.1)';
            }
        });

        // Form submit öncesi onay
        document.querySelector('form').addEventListener('submit', function(e) {
            const role = document.getElementById('role').value;
            const username = document.getElementById('username').value;

            if (role === 'Admin') {
                if (!confirm(`"${username}" kullanıcısına ADMIN yetkisi vermek istediğinizden emin misiniz?\n\nAdmin kullanıcılar tüm sisteme erişebilir ve başka kullanıcıları yönetebilir.`)) {
                    e.preventDefault();
                }
            }
        });
    </script>
}
