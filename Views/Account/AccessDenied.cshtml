@{
    ViewData["Title"] = "Erişim Engellendi";
}

<div class="page-container">
    <div style="text-align: center; padding: 80px 20px;">
        <div style="font-size: 120px; margin-bottom: 24px;">🚫</div>

        <h1 style="font-size: 48px; font-weight: 800; color: var(--danger); margin-bottom: 16px;">
            Erişim Engellendi
        </h1>

        <p style="font-size: 18px; color: var(--text-secondary); margin-bottom: 32px;">
            Bu sayfayı görüntülemek için yetkiniz yok.
        </p>

        <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;">
            <a href="/" class="btn btn-primary" style="font-size: 16px; padding: 14px 28px;">
                🏠 Ana Sayfa
            </a>
            <a href="/Account/Profile" class="btn btn-secondary" style="font-size: 16px; padding: 14px 28px;">
